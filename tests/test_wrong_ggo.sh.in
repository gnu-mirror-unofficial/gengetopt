#! @SHELL@

gengetopt="$(cd ../src; pwd)/gengetopt"
srcdir=@srcdir@
builddir=@builddir@

in_dir="$srcdir/wrong_ggo"
out_dir="$builddir/wrong_ggo"

if [ -d "$out_dir" ]; then
	rm -rf -- "$out_dir"
fi
mkdir -p "$out_dir"

for err in "$in_dir"/*.err; do
	err="$(basename -- "$err")"
	in="${err%.err}.ggo"
	out="${err%.err}.out"

	(
		cd "$in_dir"
		"$gengetopt" --unnamed-opt --input "$in" --file-name null 2>&1
	) > "$out_dir/$out"

	echo diff -u -- "$in_dir/$err" "$out_dir/$out"
	if ! diff -u -- "$in_dir/$err" "$out_dir/$out"; then
		exit 1
	fi
done
